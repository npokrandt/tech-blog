{{#each blogposts as |blogpost|}}
    <a href="#" class="blog-link"><div class="card mx-2 my-2 px-2">
        <h4>{{blogpost.title}}</h4>
        <div class="text-right pb-2">
            <h6 class="display-inline mr-5">by {{blogpost.user.username}}</h6>
            <p class="display-inline">{{blogpost.formatted_date}}</p>
        </div>
    </div></a>
{{/each}}